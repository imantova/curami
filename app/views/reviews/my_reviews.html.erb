<div class="page-header">
  <h1>
    <%= current_user.username %>'s reviews
    <a href="/reviews/new" class="btn btn-lg btn-success">New Review</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Title</th>
        <th>Hospital</th>
        <th>Department</th>
        <th>Visited on</th>
        <th>Actions</th>
      </tr>

      <% @reviews.each do |review| %>
      <tr>
        <td><%= review.title %></td>
        <td><%= review.hospital.name %></td>
        <td><%= review.department.name %></td>
        <td><%= review.visited_on.strftime('%B %e %Y') %></td>
        <td>
          <a href="/reviews/<%= review.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
