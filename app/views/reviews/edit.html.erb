<!-- Validation failure messages -->
<% if @review.errors.any? %>
  <% @review.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit <%= @review.title %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_review/<%= @review.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

            <!-- Label and input for hospital_id -->
      <div class="form-group">


        <input type="hidden" id="hospital_id" name="hospital_id" placeholder="Hospital" class="form-control" value="<%= @review.hospital_id %>">
      </div>

            <!-- Label and input for department_id -->
      <div class="form-group">


        <input type="hidden" id="department_id" name="department_id" placeholder="Department" class="form-control" value="<%= @review.department_id %>">
      </div>

            <!-- Label and input for visited_on -->
      <div class="form-group">
        <label for="visited_on" class="control-label">
          Visited on
        </label>

        <div class='input-group date' id='datetimepicker1'>
          <input type='text' class="form-control" name="visited_on" id="visited_on" value="<%= @review.visited_on %>">
          <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
          </span>
        </div>

            <!-- Label and input for title -->
      <div class="form-group">
        <label for="body" class="control-label">
          Title
        </label>

        <textarea id="title" name="title" placeholder="Title" class="form-control" rows="3"><%= @review.title %></textarea>
      </div>

      <!-- Label and input for body -->
      <div class="form-group">
        <label for="body" class="control-label">
          Body
        </label>

        <textarea id="body" name="body" placeholder="Body" class="form-control" rows="3"><%= @review.body %></textarea>
      </div>


      <!-- Label and input for user_id -->
      <div class="form-group">

        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= @review.user_id %>">
      </div>

      <!-- Label and input for rating -->
      <div class="form-group">
        <label for="rating" class="control-label">
          Rating
        </label>

        <input type="text" id="rating" name="rating" placeholder="Rating" class="form-control" value="<%= @review.rating %>">
      </div>

      <button class="btn btn-warning">
        Update Review
      </button>
      or
      <a href="/reviews/<%= @review.id %>">Cancel</a>
    </form>
  </div>
</div>

<script type="text/javascript">
  $(function () {
    $('#datetimepicker1').datetimepicker();
  });
</script>
